<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.DetailNewsActivity">

    <ImageView
        android:id="@+id/detailNewsImage"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/detailNewsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detailNewsImage"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Title"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/detailNewsSourceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detailNewsImage"
        android:layout_below="@id/detailNewsTitle"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Source Name"
        android:textSize="20sp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/detailNewsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detailNewsImage"
        android:layout_below="@id/detailNewsSourceName"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="Description"
        android:textSize="14sp"
        tools:ignore="RtlSymmetry" />

</RelativeLayout>